

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css">
    <script defer src="/script.js"></script>
</head>
<body>
    <div class="spinner-container" id="spinner-container">
        <div class="spinner"></div>
    </div>
    <div class="container">
        <h1>Welcome to the Customer Relationship Management App</h1>
        <div class="logged-in-info">
            <% if (session.user) { %>
                <p>Logged in as: <%= session.user.username %></p>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/login">Login</a>
            <% } %>
        </div>
        <div class="navbar">
            <a href="/list-people">List People</a>
            <a href="/add-person">Add Person</a>
            <a href="/search-people">Search People</a>
            <a href="/list-organizations">List Organizations</a>
            <a href="/add-organization">Add Organization</a>
            <a href="/search-organizations">Search Organizations</a>
        </div>
    </div>
</body>
</html>
